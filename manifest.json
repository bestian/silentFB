{
  "name": "SilentFB",
  "description": "Make FB Silent",
  "version": "0.0.1",
  "permissions": [
    "activeTab", "*://www.facebook.com/*", "https://www.facebook.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Make page gray"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "manifest_version": 2
}
